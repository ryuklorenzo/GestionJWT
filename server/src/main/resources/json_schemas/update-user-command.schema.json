{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100
    },
    "status": {
      "type": "string",
      "enum": ["pending", "active", "inactive", "suspended"],
      "description": "El estado debe coincidir exactamente con los valores del enum UserStatus"
    }
  },
  "required": ["name", "status"],
  "additionalProperties": false
}