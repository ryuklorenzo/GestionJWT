{
  "$schema": "https://json-schema.org/draft/2020-12/schema",

  "type": "object",
  "properties": {
    "old_password": {
      "type": "string",
      "minLength": 1,
      "description": "La contraseña actual (solo validamos que no esté vacía)"
    },
    "new_password": {
      "type": "string",
      "minLength": 8,
      "maxLength": 32,
      "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[@$!%*?&])[A-Za-z\\d@$!%*?&]{8,32}$",
      "description": "Nueva contraseña: 8-32 caracteres, mayúscula, minúscula, número y especial"
    }
  },
  "required": ["old_password", "new_password"],
  "additionalProperties": false
}